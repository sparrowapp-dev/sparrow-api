{{!< layoutName}} <!DOCTYPE html>
  <html lang="en">

  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Verification Code</title>


    <style>
      body {
        font-family: "Inter", sans-serif;
        box-sizing: border-box;
        padding: 0;
        margin: 0;
        transition: background-color 0.3s, color 0.3s;
      }

      .container {
        display: flex;
        justify-content: center;
        width: 100%;
        height: 100%;

      }

      .container-data {
        margin: auto;
        max-width: 570px;
        background-color: var(--background-color, white);
        padding: 20px;
        transition: background-color 0.3s, color 0.3s;
      }

      .header-container {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
      }

      .sparrow-heading-text {
        font-size: 40px;
        font-weight: 800;
        color: var(--header-text-color, #3670F7);
      }



      .email-text-style {
        color: var(--email-text-color, #333);
        font-family: "Inter", sans-serif;
        font-size: 14px;
        font-style: normal;
        font-weight: 400;
        line-height: 21px;
      }

      .text-bold-dynamic {
        color: var(--text-bold-color, #333333);
        font-weight: 700;
        line-height: 21px;
      }

      .icon {
        transition: filter 0.3s;
      }

      .dark-mode .icon {
        filter: invert(100%);
      }
    </style>
  </head>

  <body>

    <div class="container">
      <section style="width: 100%;">
        <div class="container-data">

          {{> header}}

